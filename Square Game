import pygame
import sys
import random

pygame.init()

WIDTH = 800
HEIGHT = 900
PLAYER_COLOR = (255,0,0)
ENEMY_COLOR = (0,0,255)
SCORE_COLOR = (0,0,0)
BACKGROUND_COLOR = (0,255,255)
SPEED = 10


player_size = 35
player_position = [WIDTH/2 ,500]

score = 0

enemy_size = 40
enemy_position = [random.randint(0,WIDTH - enemy_size),0]
enemy_list = [enemy_position]


screen = pygame.display.set_mode((WIDTH,HEIGHT))

game_over = False

clock = pygame.time.Clock()

my_font = pygame.font.SysFont("monospace", 35)

def difficulty(score, SPEED):
	if score < 50:
		SPEED = 10
	elif score < 150:
		SPEED = score / 5
	else:
		SPEED = 150 / 5
	return SPEED

def drop_enemies(enemy_list):
	delay = random.random()
	if len(enemy_list) < 10 and delay < 0.2:
		x_position = random.randint(0, WIDTH - enemy_size)
		y_position = 0
		enemy_position = [x_position,y_position]
		enemy_list.append(enemy_position)

def spawn_enemies(enemy_list):
	for enemy_position in enemy_list:
		pygame.draw.rect(screen,(ENEMY_COLOR),(enemy_position[0],enemy_position[1],enemy_size,enemy_size))

def update_enemy_position(enemy_list,score):
	for index, enemy_position in enumerate(enemy_list):
		if enemy_position[1] >= 0 and enemy_position[1] < HEIGHT:
			enemy_position[1] += SPEED
		else:
			enemy_list.pop(index)
			score += 1
	return score

def collision_check(enemy_list,player_position):
	for enemy_position in enemy_list:
		if detect_colision(player_position, enemy_position):
			return True
		return False

def detect_colision(player_position, enemy_position):
	p_x = player_position[0]
	p_y = player_position[1]

	e_x = enemy_position[0]
	e_y = enemy_position[1]

	if (e_x + enemy_size) >= p_x and e_x < (p_x + player_size) or (p_x + player_size) >= e_x and p_x < (e_x + enemy_size):
		if (e_y + enemy_size) >= p_y and e_y < (p_y + player_size) or (p_y + player_size) >= e_y and p_y < (e_y + enemy_size):
			return True
	return False



while not game_over:
	for event in pygame.event.get():

		if event.type == pygame.QUIT:
			sys.exit()

		if event.type == pygame.KEYDOWN:
			x = player_position[0]
			y = player_position[1]

			if event.key == pygame.K_LEFT:
				x -= player_size
			elif event.key == pygame.K_RIGHT:
			    x += player_size
			elif event.key == pygame.K_UP:
				y -= player_size
			elif event.key == pygame.K_DOWN:
				y += player_size


			player_position = [x,y]


	screen.fill((BACKGROUND_COLOR))


	drop_enemies(enemy_list)
	spawn_enemies(enemy_list)
	score = update_enemy_position(enemy_list, score)
	SPEED = difficulty(score, SPEED)

	text = "Score: " + str(score)
	label = my_font.render(text, 1, SCORE_COLOR)
	screen.blit(label, (WIDTH - 300, HEIGHT - 40))

	print (score)


	if collision_check(enemy_list, player_position):
		game_over =  True
		break

	pygame.draw.rect(screen,(PLAYER_COLOR),(player_position[0],player_position[1], player_size, player_size))
	clock.tick(30)

	pygame.display.update()
